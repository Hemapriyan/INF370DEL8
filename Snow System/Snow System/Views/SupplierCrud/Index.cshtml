@model IEnumerable<Snow_System.Supplier>

@{
    ViewBag.Title = "Index";
}

<h1 class="page-header pageHeading" style="text-align:center;">Suppliers</h1>

<div style="text-align:center;">
    <p>

        @using (@Html.BeginForm("Index", "SupplierCrud", FormMethod.Get))
        {

        <div style="margin-right:70px;">
            <b>Search By:</b>
            @Html.RadioButton("searchBy", "ContactName", true) <text> Name </text>
            @Html.RadioButton("searchBy", "ContactNumber") <text> Number</text>
            @Html.RadioButton("searchBy", "Registration") <text>Registration </text><br /><br />

        </div>
            @Html.TextBox("search") <input class="btn btn-primary" type="submit" value="Search" />
            <a href="@Url.Action("Index","SupplierCrud")" class="ActionButton ContinueBtn"><span class="glyphicon glyphicon-refresh"> </span>Refresh</a>
        }

    </p>
</div>
<br />

<a href="@Url.Action("AddorEdit","SupplierCrud")" class="ActionButton ContinueBtn btn btn-success" style="float:left; margin-right: 2%;"> <span class="glyphicon glyphicon-plus"></span>Add New</a>

<table class="table table-hover">
    <tr class="table-primary ">
        <th>
            @Html.DisplayNameFor(model => model.SupplierID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactPersonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactPersonSurname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreditBalance)
        </th>
        <th>Actions</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="7">
                No records match search criteria
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr class="table-dark">
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactPersonName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactPersonSurname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreditBalance)
                </td>
                <td>
                    <a href="@Url.Action("AddorEdit", "SupplierCrud", new { id = item.SupplierID })" class="btn btn-warning"><i class="fa fa-pencil"></i>Edit</a>
                    <a onclick="Delete(@item.SupplierID)" class="btn btn-danger"><i class="fa fa-trash"></i>Delete</a>
                </td>
            </tr>
        }
    }

    </table>

@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });

        function Delete(id) {
            alertify.confirm('Web API CRUD', 'Are you sure you want to delete this record?',function () {
                window.location.href = '@Url.Action("Delete","SupplierCrud")/' + id;
            }, null);
        }
    </script>
}