@model IEnumerable<Snow_System.ProductOrder>
@{ 
    int Count = 0;
    if (Model != null)
    {
        foreach (var i in Model)
        {
            Count += 1;
        }
    }
}
    <div class="dash-card card border-primary mb-3">
        <h3 class="card-header">
            Placed Client Orders @if (Count >= 1)
            {<span class="badge badge-pill badge-primary">
                    @Count
                </span>
            }
            </h3>
        <div class="card-body">
            @if (Count >= 1)
            {
                <table class="table dash-table fixed_header">
                    <thead>
                        <tr>
                            <th>
                                Order ID
                            </th>
                            <th>
                                Date Placed
                            </th>
                            <th>
                                Client Name
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductOrderID)
                    </td>
                    <td>
                        @string.Format("{0:dd/MM/yyyy } ", item.DateOfOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location.Client.ClientName)
                    </td>
                    <td>
                        <button type="button" class="btn btn-outline-primary"><b>R</b></button>
                        <button type="button" class="btn btn-outline-danger"><span class="glyphicon glyphicon-remove-sign"></span></button>

                    </td>
                </tr>
                    }
                </table>
            }
            else
            {
                <p class="dash-none">No outstanding orders</p>
            }
        </div>
        <div class="card-footer text-muted">
            <p>
                <button type="button" class="btn btn-primary card-btn">Create New</button>
                <button type="button" class="btn btn-info card-btn">View All</button>
            </p>
        </div>
    </div>

<script>
</script>