@model IEnumerable<Snow_System.Delivery>

@{
    int Count = 0;
    if (Model != null)
    {
        foreach (var i in Model)
        {
            Count += 1;
        }
    }
}
    <div class="dash-card card border-primary mb-3">
        <h3 class="card-header">Unassigned Packages @if(Count > 0){<span class="badge badge-pill badge-primary">@Count</span>}</h3>
        <div class="card-body">
            @if (Count >= 1)
            {
                <table class="table dash-table fixed_header">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th >Delivery ID</th>
                            <th>Delivery Status</th>
                            <th>Products Qty</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td >@item.ProductOrderID</td>
                                <td >@item.DeliveryID</td>
                                <td >@item.DeliveryStatu.Description</td>
                                <td > @item.DeliveryLines.Count() </td>
                                <td>
                                    <a href="@Url.Action("AssignDelivery","Delivery", new { id = item.DeliveryID })" class="btn btn-outline-primary"><span class="glyphicon glyphicon-user"></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="dash-none">No outstanding deliveries</p>
            }
        </div>
        <div class="card-footer text-muted">
            <a href="@Url.Action("Index","Delivery")">
                <div class="btn btn-info card-btn">View All</div>
            </a>
        </div>
    </div>