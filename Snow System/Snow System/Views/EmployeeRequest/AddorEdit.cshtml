@model Snow_System.EmployeeRequest

@{
    ViewBag.Title = "AddorEdit";
}


@using (Html.BeginForm("AddorEdit", "EmployeeRequest", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="CenteringContainer">
            <div class="TopInfoContainer">
                <h2 class="SectionHeading">Service Request Information</h2>
                <div class="TopInfoLeft">
                    <label for="ordID">  Service Request ID: </label> <span name="ordIDInfo"> @Model.ServiceRequestID</span><br />
                </div>
                <div class="TopInfoRight">
                    <label for="ordStatus">Service Request status: </label> <span name="ordStatus">@ViewBag.Status</span><br />
                    <label for="ordLocation">Service Location: </label> <span name="ordLocation"> </span>
                </div>
            </div>
            <br />
            <h2>Assign Employee</h2>
            <hr />
            <h5>Select Employee/s to assign to Service Request</h5><br />
            <div style=" text-align:center;">
                <select class="custom-select btn-primary" name="EmployeeID">
                    <option>Select</option>
                    @foreach (var emp in Model.EmployeeList)
                    {
                        <option value="@emp.EmployeeID">@emp.Name @emp.Surname</option>
                    }
                </select>
                <br />
                <br />
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-plus-sign"></span> Assign Employee</button>
            </div>
            <br />
            @if (Model.EmployeeRequestList != null && Model.EmployeeRequestList.Count() > 0)
            {
                <table class="table table-hover">
                    <tr class="table-primary">
                        <th>
                            Employee ID
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Surname
                        </th>
                        <th>
                            Unassign
                        </th>
                    </tr>
                    @if (Model == null)
                    {
                        <td>No Employees assigned</td>
                    }
                    else
                    {
                        foreach (var item in Model.EmployeeRequestList)
                        {
                            <tr class="table-dark" style="cursor:default;">
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee.Surname)
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete","EmployeeRequest",new { EmployeeID = item.EmployeeID , ServiceRequestID = item.ServiceRequestID })" class="OptionButton BackBtn btn btn-danger" style="position: relative; bottom: 0; left: 0; "><span class="glyphicon glyphicon-remove-circle"></span><br />Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </table>
            }

            @Html.HiddenFor(model => model.ServiceRequestID)
            @Html.HiddenFor(model => model.DateAssigned)


        </div>
        <div class="form-group">
            <a href="@Url.Action("Index","ServiceRequest")" class="OptionButton BackBtn btn btn-danger" style="position: relative; bottom: 0; left: 0; "><span class="glyphicon glyphicon-backward"></span><br />Go Back</a>

        </div>
    </div>
}


