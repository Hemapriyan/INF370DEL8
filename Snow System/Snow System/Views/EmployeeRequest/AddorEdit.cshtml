@model Snow_System.EmployeeRequest

@{
    ViewBag.Title = "AddorEdit";
}
@*//Code that im pushing . is merge working?*@

@using (Html.BeginForm("AddorEdit", "EmployeeRequest", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="TopInfoContainer">
            <h2 class="SectionHeading">Service Request Information</h2>
            <br />
            <div class="TopInfoLeft">
                <label for="ordID" style="font-size:18px;"> Date of Service: </label> <span name="ordIDInfo" style="color:black; font-size:20px;"><b> @ViewBag.date</b></span><br />
                <label for="ordStatus" style="font-size:18px;">Service Request Status: </label> <span name="ordStatus" style="color:black;font-size:20px;"><b>@ViewBag.status</b></span><br />

            </div>

            <div class="TopInfoRight">

                <label for="ordLocation" style="font-size:18px;">Service Location: </label> <span name="ordLocation" style="color:black;font-size:20px;"><b> @ViewBag.Location</b></span>

            </div>
        </div>
        <div class="CenteringContainer">

            <br />
            <h2>Assign Employee</h2>
            <hr />
            <h5>Select Employee/s to assign to Service Request</h5><br />
            <div style=" text-align:center;">
                <select class="custom-select btn-primary" name="EmployeeID">
                    <option>Select</option>
                    @foreach (var emp in Model.EmployeeList)
                    {
                        <option value="@emp.EmployeeID">@emp.Name @emp.Surname</option>
                    }
                </select>
                <br />
                <br />
                <button type="submit" class="btn btn-primary btn-success"><span class="glyphicon glyphicon-plus-sign"></span> Assign Employee</button>
            </div>
            <br />
            @if (Model.EmployeeRequestList != null && Model.EmployeeRequestList.Count() > 0)
            {
                <table class="table table-hover">
                    <tr class="table-primary">
                        <th>
                            Employee ID
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Surname
                        </th>
                        <th>
                            Unassign Employee
                        </th>
                    </tr>
                    @if (Model == null)
                    {
                        <td>No Employees assigned</td>
                    }
                    else
                    {
                        foreach (var item in Model.EmployeeRequestList)
                        {
                            <tr class="table-dark" style="cursor:default;">
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee.Surname)
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete","EmployeeRequest",new { EmployeeID = item.EmployeeID , ServiceRequestID = item.ServiceRequestID })" class="remove-icon glyphicon glyphicon-remove-sign" style="position: relative; bottom: 0; left: 0; color:red"></a>
                                </td>
                            </tr>
                        }
                    }
                </table>
            }

            @Html.HiddenFor(model => model.ServiceRequestID)
            @Html.HiddenFor(model => model.DateAssigned)


        </div>
        <div class="form-group">
            <a href="@Url.Action("Index","ServiceRequest")" class="OptionButton BackBtn btn btn-danger" style="position: relative; bottom: 0; left: 0; "><span class="glyphicon glyphicon-backward"></span><br />Go Back</a>

        </div>
    </div>
}


<script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            var errorMessage = '@TempData["ErrorMessage"]'
            if (successMessage.includes("Error:"))
            {
                alertify.error(successMessage);
            }
            else if (successMessage != "")
            {
                alertify.success(successMessage);
            }
        });

        function Delete(id) {
            alertify.confirm('Web API CRUD', 'Are you sure you want to delete this record?',function () {
                window.location.href = '@Url.Action("Delete","Employees")/' + id;
            }, null);
        }
</script>