@model IEnumerable<Snow_System.AuditLog>

@{
    ViewBag.Title = "Index";
}

<style>
    #myBtn {
  display: none; /* Hidden by default */
  position: fixed; /* Fixed/sticky position */
  bottom: 20px; /* Place the button at the bottom of the page */
  right: 30px; /* Place the button 30px from the right */
  z-index: 99; /* Make sure it does not overlap */
  border: none; /* Remove borders */
  outline: none; /* Remove outline */
  background-color: orangered; /* Set a background color */
  color: white; /* Text color */
  cursor: pointer; /* Add a mouse pointer on hover */
  padding: 15px; /* Some padding */
  border-radius: 10px; /* Rounded corners */
  font-size: 18px; /* Increase font size */
}

#myBtn:hover {
  background-color: #555; /* Add a dark-grey background on hover */
}
</style>
<h2 class="page-header pageHeading" style="text-align:center;">Audit Log</h2>

<div style="text-align:center;">
    <p>

        @using (@Html.BeginForm("Index", "AuditLog", FormMethod.Get))
        {
        <div style="margin-right:70px;">
            <b>Search By:</b>
            @Html.RadioButton("searchBy", "UserID", true) <text>User Email</text>
            @Html.RadioButton("searchBy", "Audit Log Type") <text>Audit Log Type</text>
            @Html.RadioButton("searchBy", "Changes Made") <text>Changes Made</text><br /><br />

        </div>
            @Html.TextBox("search") <input class="btn btn-primary" type="submit" value="Search" />
            <a href="@Url.Action("Index","AuditLog")" class="ActionButton ContinueBtn"><span class="glyphicon glyphicon-refresh"> </span>Refresh</a>
        }

    </p>
</div>
<br />

@*<a style="float:right;" href="@Url.Action("ExportCustomers","ClientReport")"> Download Client Report PDF </a>*@

<div class="form-horizontal">


    <table class="table table-hover">
        <thead class="table-heading table-primary">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.DateAccessed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TableAccessed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ChangesMade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AuditLogTypeID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserID)
                </th>
                @*<th>
                        Client Type
                    </th>*@
                @*<th>Actions</th>*@
            </tr>
        </thead>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4">
                    No records match search criteria
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr class="table-dark">

                    <td>
                        @Html.DisplayFor(modelItem => item.DateAccessed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TableAccessed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChangesMade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuditLogType.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserEmail)
                    </td>



                </tr>


            }
        }

    </table>

    <br />
    <button onclick="topFunction()" id="myBtn" title="Go to top">Go to Top</button>
</div>


