@model IEnumerable<Snow_System.Employee>

@{
    ViewBag.Title = "Index";
}

<h2 class="page-header pageHeading" style="text-align:center;">Employees</h2>
<hr />


<br />
<div style="text-align:center;">
    <p>

        @using (@Html.BeginForm("Index", "Employees", FormMethod.Get))
        {
        <div style="margin-right:70px;">
            <b>Search By:</b>
            @Html.RadioButton("searchBy", "Name", true) <text>Name </text>
            @Html.RadioButton("searchBy", "ID Number") <text>ID Number</text><br /><br />
        </div>
            @Html.TextBox("search") <input class="btn btn-primary" type="submit" value="Search"  />
            <a href="@Url.Action("Index","Employees")" class="ActionButton ContinueBtn"><span class="glyphicon glyphicon-refresh"> </span>Refresh</a>
        }

    </p>
</div>
<br />
<a href="@Url.Action("AddorEdit","Employees")" class="ActionButton ContinueBtn btn btn-success" style="float:left; margin-right: 2%;"> <span class="glyphicon glyphicon-plus"></span>Add New</a>

<table class="table table-hover">
    <thead class="table-primary table-heading">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeTypeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserEmail)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4">
                No records match search criteria
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
<tr class="table-dark">
    <td>
        @Html.DisplayFor(modelItem => item.EmployeeID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Surname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IDNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HouseAddress)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Picture)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Certification)
    </td>
    <td>
    @item.EmployeeType.Description

    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User.UserEmail)
       
    </td>

    <td>
        <a href="@Url.Action("AddorEdit", "Employees", new { id = item.EmployeeID })" class="btn btn-warning"><i class="fa fa-pencil"></i>Edit</a>
        <a onclick="Delete(@item.EmployeeID)" class="btn btn-danger"><i class="fa fa-trash"></i>Delete</a>

    </td>
</tr>
        }
    }

    </table>

@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });

        function Delete(id) {
            alertify.confirm('Web API CRUD', 'Are you sure you want to delete this record?',function () {
                window.location.href = '@Url.Action("Delete","Employees")/' + id;
            }, null);
        }
    </script>
}
