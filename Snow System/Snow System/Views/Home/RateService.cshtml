@model Snow_System.Models.mvcClientFeedbackModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 class="pageHeading">Rate your Service</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="CenteringContainer">

            <div class="form-group">
                @Html.LabelFor(model => model.ServiceQuality, htmlAttributes: new { @class = "control-label" })
                <br />
                <div class="">
                    <fieldset class="rating">
                        <input type="radio" id="star5" name="rating" value="5" /><label class="full" for="star5" title="Awesome - 5 stars"></label>
                        <input type="radio" id="star4" name="rating" value="4" /><label class="full" for="star4" title="Pretty good - 4 stars"></label>
                        <input type="radio" id="star3" name="rating" value="3" /><label class="full" for="star3" title="Meh - 3 stars"></label>
                        <input type="radio" id="star2" name="rating" value="2" /><label class="full" for="star2" title="Kinda bad - 2 stars"></label>
                        <input type="radio" id="star1" name="rating" value="1" /><label class="full" for="star1" title="Sucks big time - 1 star"></label>
                    </fieldset>
                    @Html.ValidationMessageFor(model => model.ServiceQuality, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Punctuality, htmlAttributes: new { @class = "control-label" })
                <br />

                <div class="">
                    <fieldset class="rating">
                        <input type="radio" id="star5" name="rating" value="5" /><label class="full" for="star5" title="Awesome - 5 stars"></label>
                        <input type="radio" id="star4" name="rating" value="4" /><label class="full" for="star4" title="Pretty good - 4 stars"></label>
                        <input type="radio" id="star3" name="rating" value="3" /><label class="full" for="star3" title="Meh - 3 stars"></label>
                        <input type="radio" id="star2" name="rating" value="2" /><label class="full" for="star2" title="Kinda bad - 2 stars"></label>
                        <input type="radio" id="star1" name="rating" value="1" /><label class="full" for="star1" title="Sucks big time - 1 star"></label>
                    </fieldset>
                    @Html.ValidationMessageFor(model => model.Punctuality, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Cleanliness, htmlAttributes: new { @class = "control-label" })
                <br />

                <div class="col-md-12">
                    <fieldset class="rating">
                        <input type="radio" id="star5" name="rating" value="5" /><label class="full" for="star5" title="Awesome - 5 stars"></label>
                        <input type="radio" id="star4" name="rating" value="4" /><label class="full" for="star4" title="Pretty good - 4 stars"></label>
                        <input type="radio" id="star3" name="rating" value="3" /><label class="full" for="star3" title="Meh - 3 stars"></label>
                        <input type="radio" id="star2" name="rating" value="2" /><label class="full" for="star2" title="Kinda bad - 2 stars"></label>
                        <input type="radio" id="star1" name="rating" value="1" /><label class="full" for="star1" title="Sucks big time - 1 star"></label>
                    </fieldset>
                    @Html.ValidationMessageFor(model => model.Cleanliness, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Friendliness, htmlAttributes: new { @class = "control-label" })
                <br />

                <div class="">
                    <fieldset class="rating">
                        <input type="radio" id="star5" name="rating" value="5" /><label class="full" for="star5" title="Awesome - 5 stars"></label>
                        <input type="radio" id="star4" name="rating" value="4" /><label class="full" for="star4" title="Pretty good - 4 stars"></label>
                        <input type="radio" id="star3" name="rating" value="3" /><label class="full" for="star3" title="Meh - 3 stars"></label>
                        <input type="radio" id="star2" name="rating" value="2" /><label class="full" for="star2" title="Kinda bad - 2 stars"></label>
                        <input type="radio" id="star1" name="rating" value="1" /><label class="full" for="star1" title="Sucks big time - 1 star"></label>
                    </fieldset>
                    @Html.ValidationMessageFor(model => model.Friendliness, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-12">
                    <textarea class="form-control"></textarea>
                    @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group" style="text-align:center;">
            <input value="Rate" class="btn btn-primary" onclick="document.getElementById('lodgeModal').style.display='block'"/>
        </div>
    </div>

    <div id="lodgeModal" class="modal animate-opacity">
        <div class="modal-content modal-background">
            <header class="">
                <h2>Rating Captured</h2>
            </header>
            <hr style="margin:0;" />
            <div style="text-align:center; font-size:500%"><span class="glyphicon glyphicon-ok-circle" style="margin-top:3%;"></span></div>
            <div class="" >
                <p>Your Rating has been Captured</p>
                <p>Thank you for spending your time to make us better!</p>
            </div>
            <hr style="margin:0;" />
            <footer class="">
                <a href="" onclick="" class="btn btn-outline-primary" style="width:75%; margin-bottom:2%; margin-top:2%;"><span class="glyphicon glyphicon-home"></span><br />Back Home</a>
            </footer>
        </div>
    </div>

}

