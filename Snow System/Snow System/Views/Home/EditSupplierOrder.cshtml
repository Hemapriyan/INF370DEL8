
@model IEnumerable<Snow_System.Models.Product>
@{
    ViewBag.Title = "Receive supplier order";
}
<h1 class="page-header pageHeading" style="text-align:center;">Take in order</h1>

<div class="TopInfoContainer">
    <h2 class="SectionHeading">Order Information</h2>
    <div class="TopInfoLeft">
        <label for="ordID">  Order ID: </label> <span name="ordIDInfo"> 000001</span><br />
        <label for="ordDate">  Date placed:</label> <span name="ordDate">2019/08/06</span>
        <label for="ordStatus">  Status:</label> <span name="ordStatus">Completed</span>
    </div>
    <div class="TopInfoRight">
        <label for="ordLocation">Order Location:</label> <span name="ordLocation"> 8 Dalton Road, Wendywood</span><br />
        <label for="ordDate">Date received:</label> <span name="ordDate">2019/10/06</span>
    </div>
    <div style="opacity:0;">.</div>
</div>

<div style="text-align:center; margin:auto;">
    <label>New status: </label>
    <select>
        <option>Backorder</option>
        <option>Completed</option>
    </select>
</div>

<h2 class="SectionHeading">Product list</h2>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Type
        </th>
        <th>
            Amount ordered
        </th>
        <th>
            Amount recieved
        </th>
        <th>
            Amount on backorder
        </th>
        <th>
            Amount to take in
        </th>
        <th>
            Price per item
        </th>
        <th>
            Subtotal
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductType)
            </td>
            <td>
                10
            </td>
            <td>
                7
            </td>
            <td>
                3
            </td>
            <td>
                <input type="number" />
            </td>
            <td>
                <input type="number" />
            </td>
            <td>
                R1 000.00
            </td>
        </tr>
    }

</table>
<div id="AuxilaryOptionsContainer">
    <label>Mark order as complete or on backorder:</label>
    <br />
    <div class="btn-group btn-group-toggle" id="emailSupplier" data-toggle="buttons">
        <label class="btn btn-primary active toggleOption">
            <input type="radio" name="options" id="option1" autocomplete="off" checked> Complete
        </label>
        <label class="btn btn-warning toggleOption">
            <input type="radio" name="options" id="option2" autocomplete="off"> Backorder
        </label>
    </div>

    <br />
    <label>Email supplier?</label>
    <br />
    <div class="btn-group btn-group-toggle" id="emailSupplier" data-toggle="buttons">
        <label class="btn btn-success active toggleOption">
            <input type="radio" name="options" id="option1" autocomplete="off" checked> Yes
        </label>
        <label class="btn btn-danger toggleOption">
            <input type="radio" name="options" id="option2" autocomplete="off"> No
        </label>
    </div>


</div>
<br />
<br />
<div class="OptionButton ContinueBtn btn btn-success" style="float:right"><span class="glyphicon glyphicon-ok-circle"></span> <br /> <br />Update</div>
<div class="OptionButton BackBtn btn btn-danger" style="position: relative; bottom: 0; left: 0; "><span class="glyphicon glyphicon-remove-circle"></span><br />Cancel</div>
