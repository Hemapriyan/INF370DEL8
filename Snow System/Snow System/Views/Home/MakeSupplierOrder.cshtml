@model IEnumerable<Snow_System.Models.Product>

@{
    ViewBag.Title = "Make supplier order";
}
<h1 class="page-header pageHeading" style="text-align:center;">Make a Supplier Order</h1>
<div class="TopInfoContainer">
    <h2 class="SectionHeading">Supplier Information</h2>
    <div class="TopInfoLeft" style="width:50%; float: left;">
        <label for="supID">Supplier ID:</label> <span name="supID"> 000001</span><br />
        <label for="supName">Supplier Name:</label> <span name="supName"> Fire Supplies</span><br />
    </div>
    <div>
        <label for="supContactInfo">Supplier Contact Number:</label> <span name="supContactInfo"> 011 802 5444</span><br />
        <label for="supEmail">Supplier Email:</label> <a href="mailto: orders@firesupplier.co.za" name="supEmail"> orders@firesupplier.co.za</a>
    </div>
</div>
<br />
<h2 class="SectionHeading">Products list</h2>

<table class="table">
    <tr class="table-primary">
        <th>
            Product ID
        </th>
        <th>
            Product Name
        </th>
        <th>
            Product Type
        </th>
        <th>
            Quantity On Hand
        </th>
        <th>
            Amount To Order
        </th>
        <th></th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-dark" style="cursor:default;">
                <td>
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductQuantityOnHand)
                </td>
                <td>
                    <input type="number" oninvalid="invalid(event)" onsubmit="valid()" min="1" value="1" class="form-control" />
                </td>
                <td>
                    <p class=" remove-icon glyphicon glyphicon-remove-sign"></p>
                </td>
            </tr>
        }
    </tbody>

</table>

<br />
<div>
    <button class="btn btn-primary" value="Add product to list" style="margin:auto;"><span class="glyphicon glyphicon-plus-sign"></span> Add products to order list</button><br>
    <!--@Html.ActionLink("Add to list", "home", new { SelectedProducts = Model })-->
</div>

<br />
<div onclick="document.getElementById('MakeOrder').style.display='block'" class="OptionButton ContinueBtn btn btn-success" style="float:right;"><span class="glyphicon glyphicon-ok-circle"></span> <br />Make Supplier Order</div>
<div class="OptionButton BackBtn btn btn-danger" style="position: relative; bottom: 0; left: 0; "><span class="glyphicon glyphicon-remove-circle"></span> <br />Cancel</div>

<div id="MakeOrder" class="modal animate-opacity">
    <div class="modal-content modal-background">
        <header class="">
            <h2>Confirm Order</h2>
        </header>
        <hr style="margin:0;" />
        <div style="text-align:center; font-size:500%"><span class="glyphicon glyphicon-info-sign" style="margin-top:3%;"></span></div>
        <div class="">
            <p>Are you sure you want to make this order?</p>
        </div>
        <hr style="margin:0;" />
        <footer class="" style="">
            <a href="" onclick="document.getElementById('MakeOrder').style.display='none'" class="btn btn-outline-danger" style="width:25%; margin:2%; margin-top:2%;"><span class="glyphicon glyphicon-remove-circle"></span><br />No</a>
            <a href="" onclick="" class="btn btn-outline-success" style="width:25%; margin:2%; margin-top:2%;"><span class="glyphicon glyphicon-ok-circle"></span><br />Yes</a>
        </footer>
    </div>
</div>