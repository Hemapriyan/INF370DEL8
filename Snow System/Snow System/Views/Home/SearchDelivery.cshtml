@model IEnumerable<Snow_System.Models.Delivery>


<h2 class="page-header pageHeading" style="text-align:center;">Delivery</h2>
<hr />

<div style="text-align:center;">
    <input type="search" style="width:78%; display:inline-block; margin-left:1%;" class="form-control" placeholder="Search..." />
    <button class="btn btn-primary" style="display:inline-block; margin-left:1%; "><span class="glyphicon glyphicon-search"></span></button>
    <br />
    <select style="float:right;" class="custom-select btn-primary">
        <option>asdasdasdasda</option>
    </select>
</div>
<br />
<table class="table table-hover">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="table-dark">
            <td></td>
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </td>
        </tr>
    }

</table>

<div class="ActionButton ContinueBtn btn btn-success" style="float:right; margin-right: 2%;"><span class="glyphicon glyphicon-record"></span><br />Assign Delivery</div>
