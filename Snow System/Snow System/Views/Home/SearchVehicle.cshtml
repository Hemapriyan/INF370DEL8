@model IEnumerable<Snow_System.Models.Vehicle>

<h1 class="page-header pageHeading" style="text-align:center;">Vehicles</h1>

<div style="margin:auto; text-align:center;">
    <input type="search" placeholder="Search vehicles" style="width:80%;" />
    <button class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
    <br />
    <span>
        <select style="float: right;" class="btn-primary custom-select">
            <option>Order By</option>
            <option>Purchase Date</option>
            <option>License Plate Number</option>
            <option>Type</option>
        </select>
    </span>
</div>
<br />
<hr />
<br />
<table class="table table-hover">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.LicensePlateNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VeihcleType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="table-dark">
            <td>
                @Html.DisplayFor(modelItem => item.LicensePlateNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VeihcleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
        </tr>
    }

</table>

<div class="ActionButton OptionButton ContinueBtn btn btn-success" style="float:right; margin-right: 2%;"><span class="glyphicon glyphicon-plus"></span><br />New</div>
<div class="ActionButton OptionButton btn btn-primary" style="float:right; margin-right: 2%;"><span class="glyphicon glyphicon-edit"></span><br />Edit</div>
<div class="ActionButton OptionButton btn btn-danger" style="float:right; margin-right: 2%;"><span class="glyphicon glyphicon-trash"></span> <br />Delete</div>
<br />
<br />
