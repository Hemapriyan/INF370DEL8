@model Snow_System.Models.ServiceRequest

<div>
    <h2 class="pageHeading">Reschedule Booking</h2>
    <hr />
    <div class=" CenteringContainer">

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ServiceRequestDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ServiceRequestDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ServiceBookedDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ServiceBookedDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Comment)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Comment)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Location)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Location)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Client)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Client)
            </dd>
        </dl>

        <div class="form-group">
            @Html.LabelFor(model => model.ServiceBookedDate, "Rescheduale Booking Date:", htmlAttributes: new { @class = "control-label 5" }):
            <div class="col-md-12">
                @Html.EditorFor(model => model.ServiceBookedDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ServiceBookedDate, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>
<p>
    <div onclick="document.getElementById('UpdateModal').style.display='block'" class="OptionButton ContinueBtn btn btn-success" style="float:right"><span class="glyphicon glyphicon-ok-circle"></span> <br />Update</div>
    <div class="OptionButton BackBtn btn btn-danger" style="position: relative; bottom: 0; left: 0; "><span class="glyphicon glyphicon-remove-circle"></span> <br />Cancel</div>
    <div onclick="document.getElementById('deleteModal').style.display='block'" class="OptionButton BackBtn btn btn-warning" style="position: relative; bottom: 0; left: 0; "><span class="glyphicon glyphicon-trash"></span> <br />Delete</div>
</p>

<div id="deleteModal" class="modal animate-opacity">
    <div class="modal-content modal-background">
        <header class="">
            <h2>Confirm Deletion</h2>
        </header>
        <hr style="margin:0;" />
        <div style="text-align:center; font-size:500%"><span class="glyphicon glyphicon-info-sign" style="margin-top:3%;"></span></div>
        <div class="">
            <p>Are you sure you want to delete this booking?</p>
        </div>
        <hr style="margin:0;" />
        <footer class="" style="">
            <a href="" onclick="document.getElementById('deleteModal').style.display='block'" class="btn btn-outline-danger" style="width:25%; margin:2%; margin-top:2%;"><span class="glyphicon glyphicon-remove-circle"></span><br />No</a>
            <a href="" onclick="" class="btn btn-outline-success" style="width:25%; margin:2%; margin-top:2%;"><span class="glyphicon glyphicon-ok-circle"></span><br />Yes</a>
        </footer>
    </div>
</div>

<div id="UpdateModal" class="modal animate-opacity">
    <div class="modal-content modal-background">
        <header class="">
            <h2>Confirm Update</h2>
        </header>
        <hr style="margin:0;" />
        <div style="text-align:center; font-size:500%"><span class="glyphicon glyphicon-info-sign" style="margin-top:3%;"></span></div>
        <div class="">
            <p>Are you sure you want to update this booking?</p>
        </div>
        <hr style="margin:0;" />
        <footer class="" style="">
            <a href="" onclick="document.getElementById('UpdateModal').style.display='none'" class="btn btn-outline-danger" style="width:25%; margin:2%; margin-top:2%;"><span class="glyphicon glyphicon-remove-circle"></span><br />No</a>
            <a href="" onclick="" class="btn btn-outline-success" style="width:25%; margin:2%; margin-top:2%;"><span class="glyphicon glyphicon-ok-circle"></span><br />Yes</a>
        </footer>
    </div>
</div>
}