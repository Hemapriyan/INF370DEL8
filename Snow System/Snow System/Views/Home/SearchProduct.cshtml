@model IEnumerable<Snow_System.Models.Product>


<h2 class="page-header pageHeading" style="text-align:center;">Products</h2>

<div style="text-align:center;" class="form-group">
    <input type="search" style="width:78%; display:inline-block; margin-left:1%;" class="form-control" placeholder="Search..." />
    <button class="btn btn-primary" style="display:inline-block; margin-left:1%; "><span class="glyphicon glyphicon-search"></span></button>
    <br />
    <div style="float:right; display: inline-block">
        <div  style="display: inline-block">
            <select class="custom-select btn-primary">
                <option value="0">Order by:</option>
                <option value="1">Product Type</option>
                <option value="2">Price</option>
            </select>
        </div>
    </div>
</div>

<br />

<table class="table table-hover">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductQuantityOnHand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductSellingPrice)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr onclick="TableRowClicked(this)" class="table-dark">
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductQuantityOnHand)
            </td>
            <td>
               R @Html.DisplayFor(modelItem => item.ProductSellingPrice).00
            </td>
        </tr>
    }

</table>

<div class="ActionButton ContinueBtn btn btn-success" style="float:right"><span class="glyphicon glyphicon-plus"></span><br /> New</div>
<div class="ActionButton btn btn-danger" style="float:right; margin-right: 2%; width:30%;" ><span class="glyphicon glyphicon-trash"></span><br />Write off</div>
<div class="ActionButton btn btn-info" style="float:right; margin-right: 2%;"><span class="glyphicon glyphicon-edit"></span><br />Edit</div>


