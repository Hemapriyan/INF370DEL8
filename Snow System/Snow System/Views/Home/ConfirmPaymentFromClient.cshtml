@model Snow_System.Models.ProductOrder

    <div>
        <h3 class="pageHeading">Confirm Payment</h3>
        <hr />
        
        <dl class="dl-horizontal" style="text-align:center;">
            <h4>Are you sure you want to capture payment this order?</h4>
            <dt>
                @Html.DisplayNameFor(model => model.orderID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.orderID)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ClientName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ClientName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateOrdered)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateOrdered)
            </dd>

            <dt>
                Total Price:
            </dt>

            <dd>
               R <span>2000.00 </span>
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <br />

            <div class="form-actions no-color">
                <div class="OptionButton ContinueBtn btn btn-success" style="float:right;"><span class="glyphicon glyphicon-ok-circle"></span> <br />Capture payment</div>
                <div class="OptionButton BackBtn btn btn-danger" style="position: relative; bottom: 0; left: 0; "><span class="glyphicon glyphicon-remove-circle"></span> <br />Cancel</div>
            </div>
        }
    </div>
