@model IEnumerable<Snow_System.Location>

@{
    ViewBag.Title = "Index";
}

<h2 class="page-header pageHeading" style="text-align:center;">Locations for @ViewBag.ClientName</h2>

<a href="@Url.Action("AddorEdit","Location" , new { cid = ViewBag.Client })" class="ActionButton ContinueBtn btn btn-success" style="float:left; margin-right: 2%;"> <span class="glyphicon glyphicon-plus"></span>Add New</a>

<table class="table table-hover">
    <thead class="table-primary table-heading">
        <tr>
            <th>
                Street Address
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suburb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                Postal Code
            </th>
            <th>
                Contact Person Name
            </th>
            <th>
               Contact Person Number
            </th>
            <th>
                Location Type
            </th>
            <th></th>
        </tr>
        </thead>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="5">
                    No records match search criteria
                </td>
            </tr>
        }
        else
        {

            foreach (var item in Model)
            {
                <tr class="table-dark">
                    <td>
                        @Html.DisplayFor(modelItem => item.StreetAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Suburb)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostalCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactPersonName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactPersonNumber)
                    </td>
                    <td>
                       @item.LocationType.Description
                    </td>
                    <td>
                        <a href="@Url.Action("AddorEdit", "Location", new { id = item.LocationID })" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span></a>
                        @if (Model.Count() > 1)
                        {
                        <a onclick="Delete(@item.LocationID)" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
                        }

                    </td>
                </tr>
            }
        }

</table>

<a href="@Url.Action("Index","Client")" class="OptionButton BackBtn btn btn-danger" style="position: relative; bottom: 0; left: 0; "><span class="glyphicon glyphicon-arrow-left"></span> <br />Back</a>

    <br /> 

@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });

        function Delete(id) {
            alertify.confirm('Confirmation', 'Are you sure you want to delete this equipment record?',function () {
                window.location.href = '@Url.Action("Delete","Location")/' + id;
            }, null);
        }

    </script>
}
