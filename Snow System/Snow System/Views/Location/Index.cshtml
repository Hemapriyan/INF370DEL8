@model IEnumerable<Snow_System.Location>

@{
    ViewBag.Title = "Index";
}

<h2 class="page-header pageHeading" style="text-align:center;">Location</h2>

<div style="text-align:center;">
    <p>

        @using (@Html.BeginForm("Index", "Location", FormMethod.Get))
        {
        <div style="margin-right:70px;">
            <b>Search By:</b>
            @Html.RadioButton("searchBy", "City", true) <text>City </text>
            @Html.RadioButton("searchBy", "Suburb") <text>Suburb</text>
            @Html.RadioButton("searchBy", "ContactPersonNumber") <text>ContactPersonNumber</text><br /><br />

        </div>
            @Html.TextBox("search") <input class="btn btn-primary" type="submit" value="Search" />
            <a href="@Url.Action("Index","Location")" class="ActionButton ContinueBtn"><span class="glyphicon glyphicon-refresh"> </span>Refresh</a>
        }

    </p>
</div>
<a href="@Url.Action("AddorEdit","Location")" class="ActionButton ContinueBtn btn btn-success" style="float:left; margin-right: 2%;"> <span class="glyphicon glyphicon-plus"></span>Add New</a>

<table class="table table-hover">
    <thead class="table-primary table-heading">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suburb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactPersonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactPersonNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationTypeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientID)
            </th>
            <th></th>
        </tr>
        </thead>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="5">
                    No records match search criteria
                </td>
            </tr>
        }
        else
        {

            foreach (var item in Model)
            {
                <tr class="table-dark">
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StreetAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Suburb)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostalCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactPersonName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactPersonNumber)
                    </td>
                    <td>
                       @item.LocationType.Description
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClientID)
                    </td>
                    <td>
                        @*<a href="@Url.Action("AddorEdit", "Location", new { id = item.LocationID })" class="btn btn-warning"><i class="fa fa-pencil"></i>Edit</a>*@
                        @*<a onclick="Delete(@item.LocationID)" class="btn btn-danger"><i class="fa fa-trash"></i>Delete</a>*@

                    </td>
                </tr>
            }
        }

</table>



@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });

        function Delete(id) {
            alertify.confirm('Confirmation', 'Are you sure you want to delete this equipment record?',function () {
                window.location.href = '@Url.Action("Delete","Location")/' + id;
            }, null);
        }

    </script>
    }