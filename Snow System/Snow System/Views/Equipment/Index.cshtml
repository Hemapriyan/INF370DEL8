@model IEnumerable<Snow_System.Equipment>

@{
    ViewBag.Title = "Index";
}


<h2 class="page-header pageHeading" style="text-align:center;">Equipment</h2>

<div style="text-align:center;">
    <p>

        @using (@Html.BeginForm("Index", "Equipment", FormMethod.Get))
        {
            <b>Search By Description:</b>
            @Html.TextBox("search") <input class="btn btn-primary" type="submit" value="Search" />
            <a href="@Url.Action("Index","Equipment")" class="ActionButton ContinueBtn"><span class="glyphicon glyphicon-refresh"> </span>Refresh</a>
        }

    </p>
</div>
<a href="@Url.Action("AddorEdit","Equipment")" class="ActionButton ContinueBtn btn btn-success" style="float:left; margin-right: 2%;"> <span class="glyphicon glyphicon-plus"></span>Add New</a>

<table class="table table-hover">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.EquipmentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </th>
        <th>
            Actions
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="5">
                No records match search criteria
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr class="table-dark">
                <td>
                    @Html.DisplayFor(modelItem => item.EquipmentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                </td>
                <td>
                    <a href="@Url.Action("AddorEdit", "Equipment", new { id = item.EquipmentID })" class="btn btn-warning"><i class="fa fa-pencil"></i>Edit</a>
                    <a onclick="Delete(@item.EquipmentID)" class="btn btn-danger"><i class="fa fa-trash"></i>Delete</a>
                </td>
            </tr>
        }
    }

    </table>



@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });

        function Delete(id) {
            alertify.confirm('Confirmation', 'Are you sure you want to delete this equipment record?',function () {
                window.location.href = '@Url.Action("Delete","Equipment")/' + id;
            }, null);
        }

    </script>
}